{
  "name": "Mail Mind - AI",
  "description": "AI-Powered Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage"],
    "host_permissions": ["https://localhost:8080/*", "*://mail.google.com/*"],
    "action":{
    "default_title": "Mail Mind - AI"
    
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
        "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ]
}